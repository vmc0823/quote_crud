<%- include("partials/header.ejs") %>
<%- include("partials/backHome.ejs") %>
<h1>Updating Author Data</h1>

    <form method="POST" action="/author/edit">

      <input type="hidden" name="authorId" value="<%=authorInfo[0].authorId%>">

      First Name:
      <input type="text" name="fName" value="<%=authorInfo[0].firstName%>">
      <br>

      Last Name:
      <input type="text" name="lName" value="<%=authorInfo[0].lastName%>">
      <br>
      
      Date of Birth:
      <input type="date" name="birthDate" value="<%= authorInfo[0].dobISO %>">
      <br>

      Date of Death (optional):
      <input type="date" name="birthDeath" value="<%= authorInfo[0].dodISO || '' %>">
      <br>

      Sex:  
        <input type="radio" name="sex" value="M" 
        
        <% if (authorInfo[0].sex == "M") { %>
          checked 
        <% } %>
        
        > Male

        <input type="radio" name="sex" value="F" 
        
        <% if (authorInfo[0].sex == "F") { %>
          checked 
        <% } %>
        
        > Female
       <br>

        Profession:
        <input type="text" name="profession" value="<%= authorInfo[0].profession %>" required>
        <br>

        Country:
        <input type="text" name="country" value="<%= authorInfo[0].country %>" required>
        <br>

        Portrait URL:
        <input type="text" name="portrait" value="<%= authorInfo[0].portrait %>" required size="70">
        <br>
      
        Biography:
        <textarea name="biography" rows="5" cols="70" required><%= authorInfo[0].biography %></textarea>
        <br><br>

      <button>Update Author</button>

    </form>  
    
    <%- include("partials/footer.ejs") %>
</body>
</html>
